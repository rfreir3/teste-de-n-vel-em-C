#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

int main(){
    setlocale(LC_ALL, "Portuguese");	//Definindo idioma usado no decorrer do código
	
	//Declaração de variáveis
	int i, n1, n2, num, gostei=0, nao_gostei=0;
	char *avaliacao=(char*)malloc(10*sizeof(char));
	char *gen=(char*)malloc(9*sizeof(char));
	
	//Início do programa
	printf("Quantas pessoas vão responder à enquete? ");
	scanf("%d", &num);
    for(i=1;i<=num;i++){
		printf("\nIndique seu sexo: Feminino ou Masculino. ");
    	gets(gen);
    	//n1=strlen(gen);
		printf("\nSua avaliação: Gostei ou Não gostei. ");
    	gets(avaliacao);
    	//n2=strlen(avaliacao);
    	if((*gen=='Feminino')&&(*avaliacao=='Gostei')){
    		gostei+=1;
		}
		else if((*gen=='Masculino')&&(*avaliacao=='Não gostei')){
    		nao_gostei+=1;
		}
    }
    printf("\nQuantidade de mulheres em porcentagem que avaliaram positivamente: %d", ((gostei/100)*num)*100);
    printf("\nQuantidade de homens em porcentagem que avaliaram negativamente: %d", ((nao_gostei/100)*num)*100);
    return(0);
}
